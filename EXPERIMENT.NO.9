# Data
marks <- c(55,60,71,63,55,65,50,55,58,59,61,63,65,67,71,72,75)

# -------- Equal Width Binning ----------
png("equal_width.png")
hist(marks, breaks=3, col="lightblue",
     main="Equal Width Binning",
     xlab="Marks")
dev.off()

# -------- Equal Frequency (Equal Depth) ----------
bins <- cut(marks,
            breaks=quantile(marks, probs=c(0,1/3,2/3,1)),
            include.lowest=TRUE)

png("equal_frequency.png")
plot(bins, col="orange",
     main="Equal Frequency Binning",
     xlab="Bins")
dev.off()

# Display bins
print("Equal Frequency Bins:")
print(bins)
