import numpy as np
import matplotlib.pyplot as plt

marks = np.array([55,60,71,63,55,65,50,55,58,59,61,63,65,67,71,72,75])

ew_bins = np.linspace(marks.min(), marks.max(), 4)

ef_bins = np.quantile(marks, [0, 1/3, 2/3, 1])

plt.figure(figsize=(10,4))

plt.subplot(1,2,1)
plt.hist(marks, bins=ew_bins)
plt.title("Equal-Width Binning")

plt.subplot(1,2,2)
plt.hist(marks, bins=ef_bins)
plt.title("Equal-Frequency Binning")

plt.show()
