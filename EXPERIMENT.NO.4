
x <- c(11,13,13,15,15,16,19,20,20,20,21,21,22,23,24,30,40,45,45,45,71,72,73,75)

bins <- split(x, rep(1:4, each=6))


bin_mean <- unlist(lapply(bins, function(b) rep(mean(b), length(b))))

bin_median <- unlist(lapply(bins, function(b) rep(median(b), length(b))))

bin_bound <- unlist(lapply(bins, function(b) {
  sapply(b, function(v) ifelse(abs(v-min(b)) < abs(v-max(b)), min(b), max(b)))
}))

bin_mean
bin_median
bin_bound
