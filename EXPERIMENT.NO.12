import numpy as np

A = np.array([18, 2, 20])
B = np.array([22, 28, 10])
C = np.array([20, 40, 40])

data = np.array([A, B, C])

cov_BC = np.cov(B, C)[0,1]

cov_matrix = np.cov(data)

cor_BC = np.corrcoef(B, C)[0,1]

cor_matrix = np.corrcoef(data)

print("Covariance between B and C:\n", cov_BC)
print("\nCovariance Matrix:\n", cov_matrix)
print("\nCorrelation between B and C:\n", cor_BC)
print("\nCorrelation Matrix:\n", cor_matrix)
